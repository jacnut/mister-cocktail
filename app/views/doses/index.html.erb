<p id="notice"><%= notice %></p>

<h1><%= @cocktail.name %></h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Ingredient</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cocktail_dose_path(@cocktail, dose) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cocktail_dose_path(@cocktail, dose), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="btn-group" role="group" aria-label="buttons">
  <%= link_to 'Back', cocktails_path, {class: "btn btn-primary btn-sm"} %>
<%= link_to 'New Dose',  new_cocktail_dose_path(@cocktail), {class: "btn btn-primary btn-sm"} %>
</div>


