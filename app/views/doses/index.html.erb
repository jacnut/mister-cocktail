<p id="notice"><%= notice %></p>

<div class = "container">

  <div class = "row">
    <div class="col-md-6">
      <div class="col-xs-12 col-md-3">
        <%= image_tag @cocktail.picture.url(:thumb), {class: "img-circle center-block cocktail-img-border"} %>
      </div>
      <div class="col-xs-12 col-md-9">
        <h1 class="text-center"><%= @cocktail.name %>
          <small>
            <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cocktail_path(@cocktail) %>
          </small></h1>
      </div>
    </div>
  </div>


  <% @doses.each do |dose| %>
    <div class="row padded">
      <div class="col-xs-9">
        <%= dose.description %>
        <%= dose.ingredient.name %>
      </div>
      <div class="col-xs-3 align-right">
        <%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cocktail_dose_path(@cocktail, dose) %> &nbsp;
        <%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cocktail_dose_path(@cocktail, dose), method: :delete %>
      </div>
    </div>
  <% end %>

  <br>

  <div class = "button_width">
  <%= link_to 'Back', cocktail_doses_path(@cocktail), {class: "btn btn-primary btn-sm btn-block"} %>
  <!-- btn-block spans the width of parent button_width -->
  </div>

    <br>


  <div class="row padded">
    <div class="col-xs-12 col-md-10">
      <h4>Add new ingredient</h4>
      <br>
      <%= render 'form' %>
    </div>
  </div>
</div>

