<%= simple_form_for(@cocktail) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :picture, as: :file %>
  </div>

  <div class = "row">
    <div class="actions btn-group col-xs-6" role="group">
      <%= link_to 'Back', cocktails_path, {class: "btn btn-primary btn-sm"} %>
      <%= f.button :submit, 'Update', {class: "btn btn-primary btn-sm"} %>
    </div>
    <div class="col-xs-6 text-right">
      <div class ="btn btn-danger btn-sm">
        <%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' }  %>
      </div>
    </div>
  </div>

<% end %>
