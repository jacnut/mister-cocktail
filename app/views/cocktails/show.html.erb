<p id="notice"><%= notice %></p>

  <h1><%= @cocktail.name %></h1>

<table>
  <thead>
    <tr>
      <th>Dose</th>
      <th>Ingredient</th>
    </tr>
  </thead>

  <tbody>
    <% @cocktail.doses.each do |dose| %>
      <tr>
        <td><%= dose.description %></td>
        <td><%= dose.ingredient.name %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<div class="btn-group" role="group">
<%= link_to 'Edit', edit_cocktail_path(@cocktail), {class: "btn btn-primary btn-sm"} %> |
<%= link_to 'Back', cocktails_path, {class: "btn btn-primary btn-sm"} %>
</div>
