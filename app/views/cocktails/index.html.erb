<p id="notice"><%= notice %></p>

<h1>Listing Cocktails</h1>

<table>
  <thead>
    <tr>
      <th>Picture</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= link_to (image_tag cocktail.picture.url(:thumb)), cocktail_doses_path(cocktail) %></td>
        <td><%= link_to cocktail.name, cocktail_doses_path(cocktail), {class: "index_link"} %></td>
        <td><%= link_to '<i class="fa fa-eye"></i>'.html_safe, cocktail_doses_path(cocktail) %></td>
        <td><%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_cocktail_path(cocktail) %></td>
        <td><%= link_to '<i class="fa fa-trash-o"></i>'.html_safe, cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path, {class: "btn btn-primary btn-sm"} %>
